{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/((?!api/).*)", "destination": "/" }
  ],
  "crons": [
    {
      "path": "/api/cron/trial-expiring",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/trial-expired",
      "schedule": "0 10 * * *"
    }
  ]
}
